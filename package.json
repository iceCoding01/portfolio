{
  "name": "henry-mfodwo-portfolio",
  "version": "1.0.0",
  "description": "Portfolio website for Henry Mfodwo - Software Engineer",
  "main": "index.html",
  "scripts": {
    "build-css": "tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
    "build-css-prod": "tailwindcss -i ./src/input.css -o ./dist/output.css --minify",
    "dev": "live-server --port=3000 --open=index.html",
    "start": "npm run dev"
